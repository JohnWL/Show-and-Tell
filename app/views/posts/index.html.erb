<% if user_signed_in? %>
  <p id="intro">
    Hello <%= current_user.name %>...
    <br/>
    <span>
      Show your image and tell us what you like about it!
    </span>
  </p>
<% else %>
  <p id="intro">Have something cool to share?<br/>
    <span>Show your image and tell us what you like about it!</span>
  </p>
<% end %>
<div id="posts">
  <% @posts.each do |p| %>
    <div class="post">
      <div class="post_image">
        <%= link_to (image_tag p.image.url(:small)), p %>
      </div>
      <div class="post_content">
        <div class="title">
          <h2>
            <%= link_to p.title, p %>
          </h2>
        </div>
        <div class="data clearfix">
          <p class="username">
            Shared by
            <%= p.user.name %>
          </p>
          <p class="buttons">
            <span>
              <i class="fa fa-comments-o"></i>
              <%= p.comments.count %>
            </span>
            <span>
              <i class="fa fa-thumbs-o-up"></i>
              <%= p.get_likes.size %>
            </span>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
